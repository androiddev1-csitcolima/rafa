<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    
    <LinearLayout 
        android:id="@+id/contenedor1"
        android:layout_height="40dip"
        android:layout_width="fill_parent"
        android:layout_alignParentTop="true"
        android:background="@drawable/fondo_fila"
        android:orientation="vertical"
        >
        <TextView 
            android:id="@+id/tvconcepto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Concepto"
            android:textColor="#1C1C1C"
            android:paddingLeft="4dip"
            />
        <TextView 
            android:id="@+id/tvfecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dia-Mes"
            android:textColor="#7D0835"
            android:paddingLeft="4dip"
            />
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/contenedor2"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_below="@id/contenedor1"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:background="@drawable/fondo_fila"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <TextView 
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:text="cargo"
            	android:textColor="#848484"
            	android:layout_gravity="right"
            	android:paddingRight="4dip"
            	/>
        	<TextView 
            	android:id="@+id/tvcargo"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:text="$000.00"
            	android:textColor="#262626"
            	android:layout_gravity="right"
            	android:paddingRight="4dip"
            	/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:background="@drawable/fondo_fila"
            android:layout_weight="1"
            android:orientation="vertical"
            >
        	<TextView 
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:text="abono"
            	android:textColor="#848484"
            	android:layout_gravity="right"
            	android:paddingRight="4dip"
            	/>
        	<TextView 
            	android:id="@+id/tvabono"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:text="$000.00"
            	android:textColor="#262626"
            	android:layout_gravity="right"
            	android:paddingRight="4dip"
            	/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:background="@drawable/fondo_fila"
            android:layout_weight="1"
            android:orientation="vertical"
            >
        	<TextView 
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:text="saldo"
            	android:textColor="#848484"
            	android:layout_gravity="right"
            	android:paddingRight="4dip"
            	/>
        	<TextView 
            	android:id="@+id/tvsaldo"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:text="$000.00"
            	android:textColor="#262626"
            	android:layout_gravity="right"
            	android:paddingRight="4dip"
            	/>
        </LinearLayout>
    </LinearLayout>
    
</RelativeLayout>